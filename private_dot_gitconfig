[core]
	# 改行コードを LF に統一（コミット時に CRLF → LF）
	autocrlf = input
	# グローバル gitignore
	excludesFile = ~/.gitignore_global
[fetch]
	# fetch 時に削除されたリモートブランチを自動削除
	prune = true
	# fetch 時に削除されたタグも自動削除
	prunetags = true
[diff]
	# より賢い差分アルゴリズム
	algorithm = histogram
[column]
	# ブランチ一覧を複数列で表示
	ui = auto
[help]
	# タイポ時に修正候補を提案
	autocorrect = prompt
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
	# コミット時に diff を表示
	verbose = true
[user]
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIFp0XK947M1izzvspy4ydaoVKG/stcmVtvNSGYCLDOm3
	name = kazuki furukawa
	email = 6816398+karur4n@users.noreply.github.com
[init]
	defaultBranch = main
[branch]
	# ブランチ一覧を最終コミット日順に表示（アルファベット順ではなく）
	sort = -committerdate
[tag]
	# タグをバージョン番号順にソート（v1.9 < v1.10 のように正しく並ぶ）
	sort = -version:refname
[merge]
	# コンフリクト時に「変更前の状態」も表示（diff3 の改良版）
	conflictStyle = zdiff3
[pull]
	# fast-forward できない場合は失敗させる（意図しないマージコミットを防ぐ）
	ff = only
[push]
	# 初回 push 時に自動で upstream を設定（-u オプション不要に）
	autoSetupRemote = true
[rerere]
	# 同じコンフリクトの解決方法を記憶して自動適用
	enabled = true
[rebase]
	# rebase 時に未コミットの変更を自動で stash/unstash
	autoStash = true
