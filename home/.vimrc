set nocompatible

set backspace=indent,eol,start

syntax on

filetype plugin indent on

set number

set noerrorbells
set visualbell

set nobackup
set noswapfile
set undodir=~/tmp/vim/undo
set viminfo+=n~/tmp/viminfo

set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set autoindent
set smartindent
